<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginHorizontal="@dimen/size_16"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view"
        android:layout_width="@dimen/size_0"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/size_16"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/size_16"
        app:cardElevation="@dimen/size_8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guideline_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/size_16">

            <TextView
                android:id="@+id/text_view_code"
                android:layout_width="@dimen/size_0"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_16"
                android:fontFamily="@font/orbitron_bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="001#" />

            <TextView
                android:id="@+id/text_view_name"
                android:layout_width="@dimen/size_0"
                android:layout_height="wrap_content"
                android:fontFamily="@font/orbitron_regular"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/text_view_code"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Pikachu" />

            <TextView
                android:id="@+id/text_view_description"
                android:layout_width="@dimen/size_0"
                android:layout_height="wrap_content"
                android:alpha="0.7"
                android:text="Good night Pickahu"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/text_view_code"
                app:layout_constraintTop_toBottomOf="@id/text_view_code"
                tools:text="Good night Pickahu" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_type_name_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:fontFamily="@font/orbitron_regular"
                tools:text="Type 1"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/text_view_code"
                app:layout_constraintTop_toBottomOf="@id/text_view_description"
                tools:visibility="visible" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_type_name_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_4"
                android:clickable="false"
                android:fontFamily="@font/orbitron_regular"
                tools:text="Type 2"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/chip_type_name_1"
                app:layout_constraintTop_toBottomOf="@id/text_view_description"
                tools:visibility="visible" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <ImageView
        android:id="@+id/image_view_photo"
        android:layout_width="@dimen/size_148"
        android:layout_height="@dimen/size_148"
        android:elevation="@dimen/size_16"
        android:src="@drawable/bulbasaur"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>