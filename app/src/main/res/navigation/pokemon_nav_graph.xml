<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pokemon_nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.pokemonapp.ui.SeasonFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_season">
        <action
            android:id="@+id/action_splashFragment_to_loadingJourneyFragment"
            app:destination="@id/loadingJourneyFragment" />
    </fragment>

    <fragment
        android:id="@+id/pokemonListFragment"
        android:name="com.example.pokemonapp.ui.PokemonListFragment"
        android:label="fragment_pokemon_list"
        tools:layout="@layout/fragment_pokemon_list">
        <action
            android:id="@+id/action_pokemonListFragment_to_pokemonDetailFragment"
            app:destination="@id/pokemonDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/pokemonDetailFragment"
        android:name="com.example.pokemonapp.ui.PokemonDetailFragment"
        android:label="fragment_pokemon_detail"
        tools:layout="@layout/fragment_pokemon_detail">
        <argument
            android:name="id"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/loadingJourneyFragment"
        android:name="com.example.pokemonapp.ui.LoadingJourneyFragment"
        android:label="fragment_loading_journey"
        tools:layout="@layout/fragment_loading_journey">
        <action
            android:id="@+id/action_loadingJourneyFragment_to_pokemonListFragment"
            app:destination="@id/pokemonListFragment" />
    </fragment>

</navigation>